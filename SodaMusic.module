name: 汽水音乐
desc: 汽水音乐去广告（Stash 方案一｜纯 rewrite 稳定版）
icon: https://github.com/Qmxn/Box/raw/X/icon/icon/XD.png

mitm:
  hosts:
    - "*.douyin.com"
    - "*.qishui.com"
    - "*.zijieapi.com"

rewrite:
  # 1️⃣ 广告策略 / 开屏 / Banner / 推荐流
  - name: 汽水音乐-广告配置
    match: ^https:\/\/tnc\d+-.*\.zijieapi\.com\/get_domains\/v\d\/\?
    type: response-jq
    require-body: true
    argument: |
      del(
        .data.opaque_data_enabled,
        .data.splash_ad,
        .data.feed_ad,
        .data.popup_ad,
        .data.banner,
        .data.ads,
        .data.ad_settings
      )

  # 2️⃣ 我的页面广告
  - name: 汽水音乐-我的页面
    match: ^https:\/\/(beta-luna\.douyin|api5-lq\.qishui)\.com\/luna\/me\?
    type: response-jq
    require-body: true
    argument: |
      del(.reward_ad_banner)

  # 3️⃣ 卡片 / 引导 / 活动入口
  - name: 汽水音乐-卡片引导
    match: ^https:\/\/(beta-luna\.douyin|api5-lq\.qishui)\.com\/luna\/card\?
    type: response-jq
    require-body: true
    argument: |
      del(
        .preview_guide,
        .activity_entry,
        .commerce_entry
      )
